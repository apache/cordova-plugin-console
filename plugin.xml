<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="org.apache.cordova.core.console"
      version="0.2.1-dev">

    <name>Console</name>
    <description>Cordova Console Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,console</keywords>

    <!-- ios -->
    <platform name="ios">

        <config-file target="config.xml" parent="/*">
		<feature name="Console">
			<param name="ios-package" value="CDVLogger"/>
		</feature>
        </config-file>

        <js-module src="www/console-via-logger.js" name="console">
            <clobbers target="console" />
        </js-module>

        <js-module src="www/logger.js" name="logger">
            <clobbers target="cordova.logger" />
        </js-module>

	<header-file src="src/ios/CDVLogger.h" />
	<source-file src="src/ios/CDVLogger.m" />

    </platform>

    <!-- wp7 -->
    <platform name="wp7">
        <config-file target="config.xml" parent="/*">
            <feature name="Console">
                <param name="wp-package" value="Console"/>
            </feature>
        </config-file>

        <js-module src="www/console-via-logger.js" name="console">
            <clobbers target="console" />
        </js-module>

        <js-module src="www/logger.js" name="logger">
            <clobbers target="cordova.logger" />
        </js-module>

        <source-file src="src/wp/Console.cs" />
    </platform>

    <!-- wp8 -->
    <platform name="wp8">
        <config-file target="config.xml" parent="/*">
            <feature name="Console">
                <param name="wp-package" value="Console"/>
            </feature>
        </config-file>

        <js-module src="www/console-via-logger.js" name="console">
            <clobbers target="console" />
        </js-module>

        <js-module src="www/logger.js" name="logger">
            <clobbers target="cordova.logger" />
        </js-module>

        <source-file src="src/wp/Console.cs" />
    </platform>

        <!-- windows8 -->
    <platform name="windows8">
        <js-module src="www/logger.js" name="logger">
            <clobbers target="cordova.logger" />
        </js-module>
        <js-module src="www/console-via-logger.js" name="console">
            <clobbers target="console" />
        </js-module>

    </platform>

</plugin>
